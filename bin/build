#!/usr/bin/env bash

cd `dirname "$0"`/..

. ./bin/.common

version=$1

# Exit on errors
exit_code=0
trap 'exit $?' ERR

# Set up wait-for-it.
if [ ! -f ./bin/wait-for-it ]; then
    curl https://raw.githubusercontent.com/vishnubob/wait-for-it/master/wait-for-it.sh > ./bin/wait-for-it
    chmod ugo+rx ./bin/wait-for-it
fi

tag_arg=
if [ ! -z $version ]; then
    validate_semver $version
    for tag in `version_tags $version`; do
        tag_arg="$tag_arg -t $tag"
    done
fi
docker build $tag_arg .

# Stop aggregating build step exit codes.
trap - ERR

if [ $exit_code -eq 0 ]
then
    echo "SUCCESS: ALL BUILD STEPS PASSED."
else
    echo "ERROR: SOME BUILD STEPS FAILED."
fi
exit $exit_code
