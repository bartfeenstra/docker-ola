#! /usr/bin/env bash


cd `dirname "$0"`/..

# Exit on errors
trap 'exit $?' ERR

if [ "$#" -ne 1 ]
then
  echo "This command takes a single argument, which is the version to release."
  exit 1
fi

VERSION=$1
BRANCH=release-$VERSION

# Check we are releasing a valid Semantic Version.
if [[ ! $VERSION =~ ^[0-9]{1,}\.[0-9]{1,}\.[0-9]{1,}$ ]]; then
    echo "$VERSION is not a valid Semantic Version (x.y.z). See https://semver.org/."
    exit 1
fi

# Check this version does not already exist.
if git tag | grep -q ^$VERSION$; then
    echo "Version $VERSION already exists."
    exit 1
fi

# Check there are no uncommitted changes.
if ! git diff-index --quiet HEAD --; then
    echo 'The Git repository has uncommitted changes.'
    exit 1
fi

# Build and test the image.
./bin/build
./bin/test

# Create the release branch.
git checkout -b $BRANCH

# Commit the release to Git.
echo $VERSION > VERSION
git add VERSION
git commit -m "Release version $VERSION."
git tag $VERSION

# Publish the image.
docker push bartfeenstra/ola:$VERSION

# Revert back to a development state.
git revert --no-edit HEAD

# Push changes.
git push --set-upstream origin $BRANCH
git push --tags

echo "Finalize the $VERSION release by approving and merging its pull request at https://github.com/bartfeenstra/docker-ola/compare/release-$VERSION?expand=1"
