#!/usr/bin/env bash
# Test plugin configuration.

set -Eeuo pipefail

cd "$(dirname "$0")/.."

. ./src/bash/docker

docker run -d --name "$CONTAINER_NAME" --env OLA_PLUGIN_SANDNET=1 bartfeenstra/ola:test
./vendor/bin/wait-for-it "$(container_ip):9090"
# OLAD is ready, but it needs a moment to deploy the runtime configuration.
sleep 3
docker exec "$CONTAINER_NAME" ola_plugin_state -p 6 | grep 'Enabled: False' || ( echo 'Fail: OLA plugin was enabled, but should not be.' && false )
docker exec "$CONTAINER_NAME" ola_plugin_state -p 7 | grep 'Enabled: True' || ( echo 'Fail: OLA plugin was not enabled, but should be.' && false )
docker exec "$CONTAINER_NAME" ola_plugin_state -p 8 | grep 'Enabled: False' || ( echo 'Fail: OLA plugin was enabled, but should not be.' && false )
